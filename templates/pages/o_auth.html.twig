{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/o_auth.css') }}">

{% endblock %}
{% block body %}

    <div class="book">
    {% for book in books %}

        {% if book.volumeInfo.imageLinks.thumbnail is defined %}
        <div class="book__item">
        <img class="book__img" src="{{ book.volumeInfo.imageLinks.thumbnail }}">
        <div class="book__title">{{ book.volumeInfo.title|slice(0,29) }}</div>
        </div>
        {% endif %}

    {% endfor %}
    </div>


{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/o_auth.js') }}"></script>

{% endblock %}
